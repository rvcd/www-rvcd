---
import MainLayout from '../../layouts/MainLayout.astro';
import EventItem from '../../components/EventItem.astro';

import upcomingEvents from '../../data/upcoming-events.json';
import signatureEvents from '../../data/signature-events.json';
---

<MainLayout
	infoKey="flying-heads"
	title="Events"
	heroImg="https://ik.imagekit.io/thegoldendino/rvcd/hero/hanging-heads_XTwLlID0v.jpg?updatedAt=1636006436488&tr=w-1024,f-jpg,pr-true"
	bg="bg-sky"
>
	<div class="grid grid-cols-2 gap-10 w-full">
		<!-- Upcomming EVENTS -->
		<div class="flex flex-col items-center h-full">
			<h3 class="text-gray-200 block text-3xl bg-sky px-4 py-2 mb-2">
				Upcoming Events
			</h3>
			{upcomingEvents.map((event) => <EventItem event={event} />)}
		</div>

		<!-- Signature EVENTS -->
		<div class="flex flex-col justify-between items-center h-full">
			<h3 class="text-gray-200 block text-3xl bg-sky px-4 py-2 mb-2">
				Signature Events
			</h3>
			{signatureEvents.map((event) => <EventItem event={event} />)}
		</div>
	</div>
</MainLayout>
