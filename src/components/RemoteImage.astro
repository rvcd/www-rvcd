---
import { Image } from 'astro:assets';

const { src, width="auto", height="auto", alt="", className="", raw=false, tr="" } = Astro.props

const transforms = (raw ? [`w-${width}`, `h-${height}`, tr] : [`w-${width}`, `h-${height}`, 'f-jpg,pr-true', tr]).join(',')
const image_url = `${src}&tr=${transforms}`
---

<Image src={image_url}  class={className} alt={alt} inferSize />





